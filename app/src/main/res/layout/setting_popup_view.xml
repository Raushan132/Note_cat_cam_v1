<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:padding="10dp"


    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date Time Format"
        android:textSize="18dp"
        android:textAlignment="center"
        android:id="@+id/date_time_format_header"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"


        >


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date_time_format"
        android:layout_gravity="center"

       >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd/MM/yyyy HH:mm:ss"
            android:textSize="16dp"
            android:id="@+id/date_time_format_1"
            android:checked="true"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd/MM/yyyy HH:mm"
            android:textSize="16dp"
            android:id="@+id/date_time_format_2"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd/MM/yyyy"
            android:textSize="16dp"
            android:id="@+id/date_time_format_3"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd-MM-yyyy HH:mm:ss"
            android:textSize="16dp"
            android:id="@+id/date_time_format_4"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd-MM-yyyy HH:mm"
            android:textSize="16dp"
            android:id="@+id/date_time_format_5"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd-MM-yyyy "
            android:textSize="16dp"
            android:id="@+id/date_time_format_6"
            />


    </RadioGroup>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/save"
        android:id="@+id/saveBtn"
        />
    </LinearLayout>
</androidx.cardview.widget.CardView>
